my_title <- "Temperaturas <b><span style = 'color:blue;'>mínimas</span></b> e <b><span style = 'color:orange;'>máximas</span></b> durante meu período nos EUA"
# Cria o gráfico
figura <- ggplot(filtered_df, aes(x = date)) +
geom_segment(aes(x = date, xend = date, y = tmin, yend = tmax)) +
geom_point(aes(y = tmin), color = "blue", size = 1) +
geom_point(aes(y = tmax), color = "orange", size = 1) +
geom_hline(yintercept = 0, linetype = "solid", color = "black", size = 0.5) +
geom_segment(aes(x = as.Date("2022-09-07"), y = 20, xend = as.Date("2022-09-07"), yend = -8),
arrow = arrow(type = "closed", length = unit(0.1, "cm")), color = "red") +
annotate("text", x = as.Date("2022-09-07"), y = -12, label = "Chegada em \nAustin: 7/set", size = 3, color = "black") +
geom_curve(aes(x = dia_com_menor_temperatura$date - 10, y = min(filtered_df$tmin), xend = dia_com_menor_temperatura$date, yend = min(filtered_df$tmin) - 2),
arrow = arrow(length = unit(0.1, "cm")), color = "red") +
geom_curve(aes(x = dia_com_maior_temperatura$date, y = max(filtered_df$tmax) - 5, xend = dia_com_maior_temperatura$date, yend = max(filtered_df$tmax) + 5),
arrow = arrow(length = unit(0.1, "cm")), color = "red") +
geom_curve(aes(x = dia_com_maior_amplitude$date, y = (max(filtered_df$tmax) + min(filtered_df$tmin)) / 2, xend = dia_com_maior_amplitude$date, yend = max(filtered_df$tmax) + 4),
arrow = arrow(length = unit(0.1, "cm")), color = "red") +
annotate("text", x = as.Date("2022-09-25"), y = 5, label = "40 dias seguidos com \ntemperaturas acima de 30°C",
size = 3, color = "black") +
labs(title = my_title, subtitle = "Registro das temperaturas nas cidades onde estive nos meses de setembro a dezembro de 2022",
x = "Dia", y = "Temperatura (°C)", caption = "Fontes: National Centers for Environmental Information; Climatempo.\nGráfico por Bianca Muniz (@biancamuniz__)") +
theme_minimal() +
theme(plot.title = element_markdown(size = 12, family = "Bitter", face = "bold"),
plot.subtitle = element_text(family = "Bitter", size = 10),
plot.caption = element_text(family = "Bitter"),
axis.title = element_text(family = "Bitter"),
axis.text = element_text(size = 10),
panel.grid.minor = element_blank()) +
scale_x_date(date_breaks = "1 month", date_labels = "%b") +
scale_y_continuous(breaks = seq(from = floor(min(filtered_df$tmin) / 10) * 10, to = ceiling(max(filtered_df$tmax) / 10) * 10, by = 10)) +
geom_vline(data = data.frame(date = seq(min(filtered_df$date), max(filtered_df$date), by = "1 month")),
aes(xintercept = date), linetype = "dotted", color = "gray")
figura
